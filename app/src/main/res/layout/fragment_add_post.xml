<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/addPostText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Add New Post"
            android:textSize="22sp"
            app:layout_constraintWidth_percent="0.85"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginBottom="22dp"
            android:layout_marginTop="40dp"
            app:layout_constraintBottom_toTopOf="@id/addPostPerson"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/addPostPerson"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#ebebeb"
            android:padding="15dp"
            app:layout_constraintWidth_percent="0.85"
            android:layout_marginBottom="22dp"
            android:hint="who is getting the gift?"
            app:layout_constraintBottom_toTopOf="@+id/addPostDescription"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addPostText" />

        <EditText
            android:id="@+id/addPostDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:height="300dp"
            app:layout_constraintWidth_percent="0.85"
            android:hint="brief description..."
            android:padding="15dp"
            android:inputType="textMultiLine"
            android:background="#ebebeb"
            android:layout_marginBottom="22dp"
            app:layout_constraintBottom_toTopOf="@+id/addPostButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addPostPerson" />

        <Button
            android:id="@id/addPostButton"
            android:layout_width="wrap_content"
            android:height="60dp"
            android:textSize="20sp"
            android:layout_marginBottom="30dp"
            android:layout_height="wrap_content"
            android:text="Post"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addPostDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

